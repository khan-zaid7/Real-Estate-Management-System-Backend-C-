@model RealEstateManagement.ViewModel.ProfileViewModel

@{
    ViewData["title"] = "Profile";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="full-row">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="text-secondary double-down-line text-center">Profile</h2>
            </div>
        </div>
        <div class="dashboard-personal-info p-5 bg-white">
            <h5 class="text-secondary border-bottom-on-white pb-3 mb-4">User Information</h5>
            <form asp-action="UpdateProfile" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <!-- User Information Section -->
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group">
                            <label for="user-id">Full Name</label>
                            <input type="text" class="form-control" asp-for="FullName">
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" asp-for="Email">
                        </div>

                        <div class="form-group">
                            <label for="phone">Contact Number</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber">
                        </div>

                        <div class="form-group">
                            <label for="role">Role</label>
                            <input type="text" class="form-control" asp-for="Role" readonly>
                        </div>

                        <button type="submit" class="btn btn-info mt-3">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}