@using RealEstateManagement.ViewModel
@model PropertyDetailViewModel
@{
    ViewData["Title"] = Model.CurrentProperty.Title;
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="banner-full-row page-banner" style="background-image:url('@Url.Content("~/images/breadcromb.jpg")');">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="page-name float-left text-white text-uppercase mt-1 mb-0"><b>Property Detail</b></h2>
            </div>
            <div class="col-md-6">
                <nav aria-label="breadcrumb" class="float-left float-md-right">
                    <ol class="breadcrumb bg-transparent m-0 p-0">
                        <li class="breadcrumb-item text-white"><a asp-action="index" asp-controller="Home" >Home</a></li>
                        <li class="breadcrumb-item active">Property Detail</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>


<div class="full-row">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Image Slider -->
                <div class="row">
                    <div class="col-md-12">
                        <div id="single-property" style="width:1200px; height:700px; margin:30px auto 50px;">
                            @if (!string.IsNullOrEmpty(Model.CurrentProperty.Image1))
                            {
                                <div class="ls-slide" data-ls="duration:7500; transition2d:5; kenburnszoom:in; kenburnsscale:1.2;">
                                    <img width="1920" height="1080" src="@Model.CurrentProperty.Image1" class="ls-bg" alt="@Model.CurrentProperty.Title" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.CurrentProperty.Image2))
                            {
                                <div class="ls-slide" data-ls="duration:7500; transition2d:5; kenburnszoom:in; kenburnsscale:1.2;">
                                    <img width="1920" height="1080" src="@Model.CurrentProperty.Image2" class="ls-bg" alt="@Model.CurrentProperty.Title" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.CurrentProperty.Image3))
                            {
                                <div class="ls-slide" data-ls="duration:7500; transition2d:5; kenburnszoom:in; kenburnsscale:1.2;">
                                    <img width="1920" height="1080" src="@Model.CurrentProperty.Image3" class="ls-bg" alt="@Model.CurrentProperty.Title" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.CurrentProperty.Image4))
                            {
                                <div class="ls-slide" data-ls="duration:7500; transition2d:5; kenburnszoom:in; kenburnsscale:1.2;">
                                    <img width="1920" height="1080" src="@Model.CurrentProperty.Image4" class="ls-bg" alt="@Model.CurrentProperty.Title" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.CurrentProperty.FloorPlanImage))
                            {
                                <div class="ls-slide" data-ls="duration:7500; transition2d:5; kenburnszoom:in; kenburnsscale:1.2;">
                                    <img width="1920" height="1080" src="@Model.CurrentProperty.FloorPlanImage" class="ls-bg" alt="@Model.CurrentProperty.Title" />
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Property Status and Basic Info -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="bg-success d-table px-3 py-2 rounded text-white text-capitalize">
                            @Model.CurrentProperty.SellingType
                        </div>
                        <br>
                        <div class="bg-success d-table px-3 py-2 rounded text-white text-capitalize">
                            <a asp-controller="Inquiry" asp-action="Create" asp-route-propertyId="@Model.CurrentProperty.Id" >
                                 Send Inquiry
                            </a>
                        </div

                        <h5 class="mt-2 text-secondary text-capitalize">@Model.CurrentProperty.Title</h5>
                        <span class="mb-sm-20 d-block text-capitalize">
                            <i class="fas fa-map-marker-alt text-success font-12"></i>
                            @Model.CurrentProperty.Address, @Model.CurrentProperty.City, @Model.CurrentProperty.State
                        </span>
                    </div>
                    <div class="col-md-6">
                        <div class="text-success text-left h5 my-2 text-md-right">@Model.CurrentProperty.Price.ToString("C")</div>
                        <div class="text-left text-md-right">@Model.CurrentProperty.PropertyType</div>
                    </div>
                </div>

                <!-- Property Details -->
                <div class="property-details">
                    <div class="bg-gray property-quantity px-4 pt-4 w-100">
                        <ul>
                            <li><span class="text-secondary">Property Size</span> @Model.CurrentProperty.AreaSize Sqft</li>
                            <li><span class="text-secondary">Beds</span> @(Model.CurrentProperty.Bedroom?.ToString() ?? "N/A") Bedroom</li>
                            <li><span class="text-secondary">Baths</span> @(Model.CurrentProperty.Bathroom?.ToString() ?? "N/A") Bathroom</li>
                            <li><span class="text-secondary">Balcony</span> @(Model.CurrentProperty.Balcony?.ToString() ?? "N/A") Balcony</li>
                            <li><span class="text-secondary">Hall</span> @(Model.CurrentProperty.Hall?.ToString() ?? "N/A") Hall</li>
                            <li><span class="text-secondary">Kitchen</span> @(Model.CurrentProperty.Kitchen?.ToString() ?? "N/A") Kitchen</li>
                        </ul>
                    </div>

                    <h4 class="text-secondary my-4">Description</h4>
                    <p>@Model.CurrentProperty.Content</p>

                    <!-- Property Summary Table -->
                    <h5 class="mt-5 mb-4 text-secondary">Property Summary</h5>
                    <div class="table-striped font-14 pb-2">
                        <table class="w-100">
                            <tbody>
                                <tr>
                                    <td>BHK :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.BHK</td>
                                    <td>Property Type :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.PropertyType</td>
                                </tr>
                                <tr>
                                    <td>Floor :</td>
                                    <td class="text-capitalize">Floor @Model.CurrentProperty.Floor</td>
                                    <td>Total Floor :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.TotalFloor Floors</td>
                                </tr>
                                <tr>
                                    <td>City :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.City</td>
                                    <td>State :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.State</td>
                                </tr>
                                <tr>
                                    <td>Status :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.Status</td>
                                    <td>Selling Type :</td>
                                    <td class="text-capitalize">@Model.CurrentProperty.SellingType</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Contact Agent -->
                    @if (Model.CurrentProperty.User != null)
                    {
                        <h5 class="mt-5 mb-4 text-secondary double-down-line-left position-relative">Contact Agent</h5>
                        <div class="agent-contact pt-60">
                            <div class="row">
                                <div class="col-sm-8 col-lg-9">
                                    <div class="agent-data text-ordinary mt-sm-20">
                                        <h6 class="text-success text-capitalize">@Model.CurrentProperty.User.UserName</h6>
                                        <ul class="mb-3">
                                            <li>@(Model.CurrentProperty.User.PhoneNumber ?? "Phone not available")</li>
                                            <li>@Model.CurrentProperty.User.Email</li>
                                        </ul>
                                        <div class="mt-3 text-secondary hover-text-success">
                                            <ul>
                                                <li class="float-left mr-3"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                                <li class="float-left mr-3"><a href="#"><i class="fab fa-twitter"></i></a></li>
                                                <li class="float-left mr-3"><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Right Sidebar (Featured and Recent Properties) -->
            <div class="col-lg-4">
                @if (Model.FeaturedProperty != null)
                {
                    <h4 class="double-down-line-left text-secondary position-relative pb-4 mb-4 mt-5">Featured Property</h4>
                    <ul class="property_list_widget">
                        <li>
                            <img src="@(Model.FeaturedProperty.Image1 ?? "/images/property/default.jpg")" alt="@Model.FeaturedProperty.Title">
                            <h6 class="text-secondary hover-text-success text-capitalize">
                                <a asp-action="PropertyDetail" asp-route-id="@Model.FeaturedProperty.Id">@Model.FeaturedProperty.Title</a>
                            </h6>
                            <span class="font-14">
                                <i class="fas fa-map-marker-alt icon-success icon-small"></i> 
                                @Model.FeaturedProperty.City, @Model.FeaturedProperty.State
                            </span>
                        </li>
                    </ul>
                }

                @if (Model.RecentProperty != null)
                {
                    <div class="sidebar-widget mt-5">
                        <h4 class="double-down-line-left text-secondary position-relative pb-4 mb-4">Recently Added Property</h4>
                        <ul class="property_list_widget">
                            <li>
                                <img src="@(Model.RecentProperty.Image1 ?? "/images/property/default.jpg")" alt="@Model.RecentProperty.Title">
                                <h6 class="text-secondary hover-text-success text-capitalize">
                                    <a asp-action="PropertyDetail" asp-route-id="@Model.RecentProperty.Id">@Model.RecentProperty.Title</a>
                                </h6>
                                <span class="font-14">
                                    <i class="fas fa-map-marker-alt icon-success icon-small"></i> 
                                    @Model.RecentProperty.City, @Model.RecentProperty.State
                                </span>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>